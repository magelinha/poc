	<formulario>
		<nome>pagina</nome>
		<html><![CDATA[
			<!-- formulario com as propriedades da pagina-->
			<form id="poc-form-propriedades-pagina" role="form">
			  <div class="form-group">
			    <label for="site-centralizado">Site Centralizado</label>
			    <select id="site-centralizado" class="form-control" name="site-centralizado">
			    	<option value="0">Não</option>
			    	<option value="1">Sim</option>
			    </select>
			  </div>

			  <div class="form-group">
			    <label for="page-background">Plano de fundo</label>
			    <div class="input-group input-group-sm">
			    	<input type="text" name="page-background" id="page-background" value="Padrão" class="form-control" disabled>
	        		<div class="input-group-btn">
		        		<button class="btn btn-primary" type="button" data-toggle="modal" data-target="#modalFundoSite" id="btnFundoSite"><span class="glyphicon glyphicon-picture"></span></button>
		        	</div>
		        </div><!-- /input-group -->
			  </div>
			  
			  <div class="form-group">
			    <label for="fonte">Fonte</label>
			    <select id="fonte" class="form-control" name="fonte">
			    	<option value="Glyphicons Halflings" style="font-family:'Arial', sans-serif">Padrão (Arial)</option>
			    </select>
			  </div>

			  <div class="form-group">
			    <label for="tamanho_fonte">Tamanho da Fonte</label>
			    <select name="tamanho_fonte" id="tamanho_fonte" class="form-control">
			    	<option value="10px">10px</option>
			    	<option value="11px">11px</option>
			    	<option value="12px">12px</option>
			    	<option value="13px">13px</option>
			    	<option value="14px" selected>14px</option>
			    	<option value="15px">15px</option>
			    	<option value="16px">16px</option>
			    	<option value="17px">17px</option>
			    	<option value="18px">18px</option>
			    	<option value="19px">19px</option>
			    	<option value="20px">20px</option>
			    </select>
			  </div>
			</form>
		]]>
		</html>
	</formulario>
