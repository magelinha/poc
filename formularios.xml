<listaFormularios>
	<formulario>
		<nome>pagina</nome>
		<html><![CDATA[
			<!-- formulario com as propriedades da pagina-->
			<form id="poc-form-propriedades-pagina" role="form">
			  <div class="form-group">
			    <label for="site-centralizado">Site Centralizado</label>
			    <select id="site-centralizado" class="form-control" name="site-centralizado">
			    	<option value="0">Não</option>
			    	<option value="1">Sim</option>
			    </select>
			  </div>

			  <div class="form-group">
			    <label for="page-background">Plano de fundo</label>
			    <div class="input-group input-group-sm">
			    	<div class="input-group-btn">
		        		<button class="btn btn-danger clear-input" type="button"><span class="glyphicon glyphicon-trash"></span></button>
		        	</div>
		        	<input type="text" name="page-background" id="page-background" class="form-control">
	        		<div class="input-group-btn">
		        		<button class="btn btn-primary" type="button" data-toggle="modal" data-target="#modalFundoSite"><span class="glyphicon glyphicon-picture"></span></button>
		        	</div>
		        </div><!-- /input-group -->
			  </div>
			  <div class="form-group">
			    <label for="fonte">Fonte</label>
			    <select id="fonte" class="form-control" name="fonte">
			    	<option value="Glyphicons Halflings" style="font-family:'Glyphicons Halflings', sans-serif">Padrão (Glyphicons Halflings)</option>
			    </select>
			  </div>
			  <div class="form-group">
			    <label for="tamanho_fonte">Tamanho da Fonte</label>
			    <input type="number" min="10" max="20" id="tamanho_fonte" class="form-control" name="tamanho_fonte">
			  </div>
			</form>
		]]>
		</html>
	</formulario>
</listaFormularios>